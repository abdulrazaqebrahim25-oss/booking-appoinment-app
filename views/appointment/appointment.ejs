<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Appointments</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <%- include('../navbar') %>

    <div class="container">
        <h1>Manage Appointments</h1>

        <div class="provider-actions">
            <a href="/appointment/new" class="btn btn-primary">Book New Session</a>
            <a href="/" class="btn btn-secondary">Home</a>
        </div>

        <div class="appointment-grid">
            <% appointments.forEach((oneApp) => { %>
                <div class="app-card">

                    <div class="app-time-badge">
                        <span class="date"><%= oneApp.date %></span>
                        <span class="time"><%= oneApp.time %></span>
                    </div>

                    <div class="app-details">
                        <p class="label">Provider</p>
                        <p class="value"><%= oneApp.service.provider.name %></p>

                        <p class="label">Client</p>
                        <p class="value"><%= oneApp.user.username %></p>
                    </div>

                    <% if(user.role === 'Admin') { %>
                        <div class="provider-buttons" style="justify-content:center; margin-top: 1rem; gap: 10px; flex-wrap: wrap;">
                            <span class="role-tag">Staff Dashboard</span>

                         
                        </div>
                    <% } %>

                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
